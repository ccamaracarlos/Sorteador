<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="javamobile.sorteador.MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SORTEADOR"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:text="CLICK NO BOTÃƒO PARA GERAR UM NUMERO DE 0 A 100"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="220dp"
        android:text="O NUMERO SORTEADO FOI: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <Button
        android:id="@+id/botaoOk"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="125dp"
        android:layout_marginTop="150dp"
        android:text="Limpar"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/botaoSortear"
        android:layout_width="370dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="25dp"
        android:text="SORTEAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_green_dark" />


</LinearLayout>